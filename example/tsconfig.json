{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "declaration": true,
  },
  "exclude": ["node_modules", "dist", "src/**/*.spec.ts", "src/**/*.test.ts", "example"],
  "include": ["src/**/*.ts"]
}